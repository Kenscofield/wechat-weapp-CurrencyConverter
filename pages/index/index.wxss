/*logo和官方出品*/

.logo {
  flex-direction: column;
  height: 80rpx;
  line-height: 80rpx;
  padding: 10rpx 40rpx;
  font-size: 26rpx;
  color: #888;
}

.num-import, .num-export {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  padding: 30rpx 40rpx;
  background: #fff;
  border-bottom: 1px solid #ccc;
}

.num-import>picker, .num-export>picker, .num-import>view, .num-export>view {
  border: 1px solid #ccc;
  font-size: 26rpx;
  color: #999;
  padding: 10rpx;
}

.buy-in {
  display: inline-block;
  background: #fabf3a;
  color: #fff;
  text-align: center;
  width: 80rpx;
}
.red{
    color:red;
}
.green{
    color:green;
}
.huobidui-list {
  display: flex;
  flex-flow: row nowrap;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  font-size: 30rpx;
  border-bottom: 1px solid #ccc;
}

.huobidui-list view {
  display: flex;
  flex-wrap: wrap;
  flex-direction: column;
  align-items:flex-end;
  width: 30%;
}

.huobidui-title {
  border-bottom: 2px solid #ccc;
  line-height: 100rpx;
  display: flex;
  flex-direction: row;
  flex-wrap: nowrap;
  justify-content: space-between;
}
.selected{
    font-weight: bold;
    color: #ccc;
}
